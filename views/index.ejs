<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Create QR</title>
    <link rel="icon" type="image/png" href="/img/icon.png" />
    <link rel="stylesheet" href="./css/bootstrap.min.css" />
</head>

<body>
    <div class="container">
        <h1>Create a QR code</h1>

        <form action="" method="POST" class="pb-5">
            <label class="form-label" for="type">QR type:</label>
            <select class="form-select" name="type" id="type">
                <option value="url">URL</option>
                <option value="phone">Phone number</option>
                <option value="sms">SMS (text message)</option>
                <option value="wifi">Wi-Fi</option>
                <option value="email">Email</option>
                <option value="contact">Contact card</option>
                <option value="event">Calendar event</option>
            </select>
            <br /> <br />

            <div class="form-group" id="urlDiv">
                <label class="form-label" for="url">Enter a URL: </label>
                <input class="form-control" name="url" id="url" type="text" placeholder="Enter a URL here...">
            </div>

            <div class="form-group" id="phoneDiv">
                <label class="form-label" for="phone">Enter a phone number: </label>
                <input class="form-control" name="phone" id="phone" type="tel"
                    placeholder="Enter a phone number here...">
            </div>

            <div class="form-group" id="smsDiv">
                <label class="form-label" for="sms">Enter a number to text message: </label>
                <input class="form-control" name="sms" id="sms" type="tel"
                    placeholder="Enter a phone number to SMS here..."><br />
                <label class="form-label" for="smsMessage">Enter a SMS message: </label>
                <input class="form-control" name="smsMessage" id="smsMessage" type="text"
                    placeholder="Enter SMS message here...">
            </div>

            <div class="form-group" id="wifiDiv">
                <label class="form-label" for="auth">Authentication type: </label>
                <select class="form-select" name="auth" id="auth">
                    <option value="WPA">WPA (probable)</option>
                    <option value="WEP">WEP</option>
                    <option value="none">None</option>
                </select> <br />
                <label class="form-label" for="name">Network name: </label>
                <input class="form-control" name="name" id="name" type="text" placeholder="Enter network name here...">
                <br />
                <label class="form-label" for="password">Network password: </label>
                <input class="form-control" name="password" id="password" type="password"
                    placeholder="Enter the network password here...">
            </div>

            <div class="form-group" id="emailDiv">
                <label class="form-label" for="email">Enter an email: </label>
                <input class="form-control" name="email" id="email" type="email" placeholder="Enter email here...">
                <br />
                <label class="form-label" for="emailSubject">Enter a subject: </label>
                <input class="form-control" name="emailSubject" id="emailSubject" type="text"
                    placeholder="Enter email subject here...">
            </div>

            <div class="form-group" id="contactDiv">
                <label class="form-label" for="contactFirstName">Enter contact's first name: </label>
                <input class="form-control" name="contactFirstName" id="contactFirstName" type="text"
                    placeholder="Enter the contact's first name here..."> <br />
                <label class="form-label" for="contactLastName">Enter contact's last name: </label>
                <input class="form-control" name="contactLastName" id="contactLastName" type="text"
                    placeholder="Enter the contact's last name here..."> <br />
                <label class="form-label" for="contactPhone">Enter contact's phone number: </label>
                <input class="form-control" name="contactPhone" id="contactPhone" type="text"
                    placeholder="Enter the contact's phone number here..."> <br />
                <label class="form-label" for="contactEmail">Enter contact's email: </label>
                <input class="form-control" name="contactEmail" id="contactEmail" type="email"
                    placeholder="Enter contact's email here...">
                <br />
            </div>

            <div class="form-group" id="eventDiv">
                <label class="form-label" for="eventOrganizerName">Enter the event organizer's name: </label>
                <input class="form-control" name="eventOrganizerName" id="eventOrganizerName" type="text"
                    placeholder="Enter the event organizer's name here..."> <br />
                <label class="form-label" for="eventOrganizerEmail">Enter the event organizer's email: </label>
                <input class="form-control" name="eventOrganizerEmail" id="eventOrganizerEmail" type="text"
                    placeholder="Enter the event organizer's email here..."> <br />
                <label class="form-label" for="eventTitle">Enter the event title: </label>
                <input class="form-control" name="eventTitle" id="eventTitle" type="text"
                    placeholder="Enter a event title here..."> <br />
                <label class="form-label" for="eventStart">Event start: </label>
                <input class="form-control" name="eventStart" id="eventStart" type="datetime-local"> <br />
                <label class="form-label" for="eventEnd">Event end:</label>
                <input class="form-control" name="eventEnd" id="eventEnd" type="datetime-local">
            </div>
            <br />

            <button type="submit" class="btn btn-primary">Create QR</button>
        </form>

        <% if (message) { %>
        <p>
            <%= message %>
        </p>
        <% } %>

        <% if (src) { %>
        <img src="<%= src %>" class="img-thumbnail" alt="Generated QR code." /> <br />
        <p><small class="text-muted">Right click, and "Save Image As..." to save the QR code.</small></p>
        <% } %>

    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
        let hideAll = () => {
            $('#urlDiv').hide();
            $('#phoneDiv').hide();
            $('#smsDiv').hide();
            $('#wifiDiv').hide();
            $('#emailDiv').hide();
            $('#contactDiv').hide();
            $('#eventDiv').hide();
        };
        hideAll();

        $("#type").change(function () {
            hideAll();
            switch ($(this).val()) {
                case 'url':
                    $('#urlDiv').show();
                    break;
                case 'phone':
                    $('#phoneDiv').show();
                    break;
                case 'sms':
                    $('#smsDiv').show();
                    break;
                case 'wifi':
                    $('#wifiDiv').show();
                    break;
                case 'email':
                    $('#emailDiv').show();
                    break;
                case 'contact':
                    $('#contactDiv').show();
                    break;
                case 'event':
                    $('#eventDiv').show();
                    break;
                default:
                    $('#urlDiv').show();
            }
        });
        $("#type").trigger("change");
    </script>
</body>

</html>